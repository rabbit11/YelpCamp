<%include ../partials/header %>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">YelpCamp</p>
                <div class="list-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
                </div>
            </div>
            <div class="col-md-9">
                <div class="card">
                    <img class="card-img-top"src="<%=campground.image%>" alt="">
                    <div class="card-body bg-light">
                        <h4 class="float-right card-text">$9.00/night</h4>
                        <h4 class="card-title"><a href="/campgrounds/<%=campground._id%>"><%=campground.name%></a></h4>
                        <p class="card-text"><%=campground.description%></p>
                    </div>
                </div>
                <div class="card mt-4">
                    <div class="card-body bg-light">
                        <div class="text-right">
                            <a class="btn btn-success " href="/campgrounds/<%=campground._id%>/comments/new">Leave a Review</a>
                        </div>
                        <hr>
                        <% campground.comments.forEach(function(comment){%>
                            <div class="row">
                                <div class="col-md-12">
                                    <strong><%=comment.author%></strong>
                                    <span class="float-right">10 days ago</span>
                                    <p><%=comment.text%></p>
                                </div>
                            </div>
                        <%});%>
                    </div>
                </div>
            </div>
        </div>    
    </div>
<%include ../partials/footer%>