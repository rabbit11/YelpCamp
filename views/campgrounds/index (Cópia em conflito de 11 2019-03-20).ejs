<%include ../partials/header %>

    <div class="container">
        <header class="jumbotron mt-4">
            <div class="container">
                <h1>Welcome to YelpCamp</h1>
                <p>View Our hand-picked campgrounds from all over the world</p>
                <p>
                    <a class="btn btn-primary btn-lg"href="/campgrounds/new">Add new Campground</a>
                </p>
            </div>
        </header>
        
        <div class="row">
            <div class="col-lg-12">
                <h3>Our most Popular Campgrounds</h3>
            </div>
            <% campgrounds.forEach(function(campground){%>
                <div class="col-md-3 col-sm-6">
                    <div class="card bg-light">
                        <img class="card-img-top" src="<%=campground.image%>" alt="<%=campground.name%>'s image">
                        <div class="card-body">
                            <h5 class="card-title"><%= campground.name %></h5>
                            <p>
                                <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary float-right">More Info</a>
                            </p>
                        </div>
                    </div>
                </div>
            <%});%>
        </div>

    </div>

<%include ../partials/footer%>